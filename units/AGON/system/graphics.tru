unit Graphics;
@use "system/screen"


var
	x1,y1,x2,y2 : integer;
	col : byte;
	
procedure Line(x1,y1,x2,y2 : global integer; col: global byte);	
begin
	x1<<=2;
	y1<<=2;
	x2<<=2;
	y2<<=2;
	
	x1+=256;
	y1+=200;
	x2+=256;
	y2+=200;
	Screen::SetPCol(col);
	Screen::Plot(x1,y1,4);
	Screen::Plot(x2-x1,y2-y1,1);
	
end;	
	
end.
